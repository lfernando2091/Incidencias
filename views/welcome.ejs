		<link rel="stylesheet" type="text/css" href="/css/style.css" />
        <link rel="stylesheet" type="text/css" href="/css/notyf.min.css" />

        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.35/css/uikit.min.css">
        <!--<link rel="stylesheet" type="text/css" href="/online/css/uikit.min.css">-->

        <!--<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">-->   
        <link rel="stylesheet" type="text/css" href="/online/css/jquery.dataTables.min.css">

    </head>
    <body>
        <div uk-sticky class="uk-navbar-container tm-navbar-container uk-active">
            <div class="uk-container uk-container-expand">
                <nav uk-navbar>
                    <div class="uk-navbar-left">
                        <a id="sidebar_toggle" class="uk-navbar-toggle" uk-navbar-toggle-icon ></a>
                        <a href="#" class="uk-navbar-item uk-logo">
                            Incidencias
                        </a>
                    </div>
                    <div class="uk-navbar-right uk-light">
                        <ul class="uk-navbar-nav">
                            <li class="uk-active">
                                <a href="#"><%= user %> &nbsp;<span class="ion-ios-arrow-down"></span></a>
                                <div uk-dropdown="pos: bottom-right; mode: click; offset: -17;">
                                   <ul class="uk-nav uk-navbar-dropdown-nav">
                                       <li class="uk-nav-header">Opciones</li>
                                       <li><a href="/perfil">Editar Perfil</a></li>
                                       <li class="uk-nav-header">Acciones</li>
                                       <li><a href="/logout">Logout</a></li>
                                   </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <div id="sidebar" class="tm-sidebar-left uk-background-default">
            <center>
                <div class="user">
                    <img id="avatar" width="100" class="uk-border-circle" src="images/avatar.png" />
                    <div class="uk-margin-top"></div>
                    <div id="name" class="uk-text-truncate"><%= user %></div>
                    <div id="email" class="uk-text-truncate"><%= email %></div>
                    <span id="status" data-enabled="true" data-online-text="En linea" data-away-text="Fuera" data-interval="10000" class="uk-margin-top uk-label uk-label-success"></span>
                </div>
                <br />
            </center>
            <ul class="uk-nav uk-nav-default">

                <li class="uk-nav-header">
                    Menú
                </li>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/docente_incidencia">Incidencia</a></li>
                <li><a href="/docente_calificacion">Calificaciones</a></li>                

                <li class="uk-nav-header">
                    Catalogos
                </li>
                <li><a href="/docente">Docentes</a></li>
                <li><a href="/usuario">Usuarios</a></li>                
                <li><a href="/periodo">Periodo</a></li>
                <li><a href="/criterio">Criterio</a></li>
                <li><a href="/categoria_incidencia">Categoria Incidencia</a></li>
                <li><a href="/programa_educativo">Programa Educativo</a></li>

                <li class="uk-nav-header">
                    Reportes
                </li>
                <li><a href="/reporte_docente_incidencia">Incidencia</a></li>
                <li><a href="/reporte_calificaciones">Calificaciones</a></li>	            
            </ul>
        </div>
        <!-- Content -->

        <% if(content == 'dashboard' || content == ''){ %>
            <%- include('./menu/dashboard'); -%>
        <% } %>

        <% if(content == 'periodo'){ %>
            <%- include('./menu/periodo'); -%>
        <% } %>
        
        <% if(content == 'criterio'){ %>
            <%- include('./menu/criterio'); -%>
        <% } %>

        <% if(content == 'programa_educativo'){ %>
            <%- include('./menu/programa_educativo'); -%>
        <% } %>

        <% if(content == 'categoria_incidencia'){ %>
            <%- include('./menu/categoria_incidencia'); -%>
        <% } %>

        <% if(content == 'docente'){ %>
            <%- include('./menu/docente'); -%>
        <% } %>

        <% if(content == 'usuario'){ %>
            <%- include('./menu/usuario'); -%>
        <% } %>

        <% if(content == 'docente_incidencia'){ %>
            <%- include('./menu/docente_incidencia'); -%>
        <% } %>

        <% if(content == 'perfil'){ %>
            <%- include('./menu/perfil'); -%>
        <% } %>

        <% if(content == 'docente_calificacion'){ %>
            <%- include('./menu/docente_calificacion'); -%>
        <% } %>

        <% if(content == 'docente_calificacion_criterio'){ %>
            <%- include('./menu/docente_calificacion_criterio'); -%>
        <% } %>

        <% if(content == 'reporte_docente_incidencia'){ %>
            <%- include('./reporte/incidencias'); -%>
        <% } %>

        <% if(content == 'docente_incidencia_filtro'){ %>
            <%- include('./menu/docente_incidencia_filtro'); -%>
        <% } %>

        <% if(content == 'reporte_calificaciones'){ %>
            <%- include('./reporte/calificaciones'); -%>
        <% } %>

        <% if(content == 'docente_calificacion_filtro'){ %>
            <%- include('./menu/docente_calificacion_filtro'); -%>
        <% } %>

        <!-- End Content -->
        
        <!-- JQuery -->
        <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>-->
        <script type="text/javascript" src="online/js/jquery.min.js"></script>

        <% if(content == 'periodo' || 
            content == 'criterio' ||
            content == 'programa_educativo' ||
            content == 'categoria_incidencia' ||
            content == 'docente' ||
            content == 'usuario' ||
            content == 'docente_incidencia' ||
            content == 'perfil' ||
            content == 'docente_calificacion' ||
            content == 'docente_calificacion_criterio' ||
            content == 'docente_incidencia_filtro' ||
            content == 'docente_calificacion_filtro'){ %>
        <!-- Data Tables -->

        <!--<script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>-->
        <script type="text/javascript" src="/online/js/jquery.dataTables.min.js"></script>

        <!--<script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.uikit.min.js"></script>-->
        <script type="text/javascript" src="/online/js/dataTables.uikit.min.js"></script>

        <script type="text/javascript" src="/js/data-table.js"></script>
        <script type="text/javascript" src="/js/data-table-edit.js"></script>
        <% } %>

        <!-- Uikit -->
        <script type="text/javascript" src="/js/uikit.min.js" ></script>
        <!-- Uikit Icons -->
        <script type="text/javascript" src="/js/uikit-icons.min.js" ></script>
        <% if(content == 'dashboard' || content == ''){ %>
		<!-- Load More Javascript -->

        <!--<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.0/Chart.min.js" integrity="sha256-UGwvyUFH6Qqn0PSyQVw4q3vIX0wV1miKTracNJzAWPc=" crossorigin="anonymous"></script>-->
        <script type="text/javascript" src="/online/js/Chart.min.js"></script>

        <% } %>

        <!--<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.transit/0.9.12/jquery.transit.min.js" integrity="sha256-rqEXy4JTnKZom8mLVQpvni3QHbynfjPmPxQVsPZgmJY=" crossorigin="anonymous"></script>-->
        <script type="text/javascript" src="online/js/jquery.transit.min.js"></script>

		<script type="text/javascript" src="/js/notyf.min.js"></script>
		<!-- Required Overall Script -->
        <script type="text/javascript" src="/js/script.js"></script>
		<!-- Status Updater -->
		<script type="text/javascript" src="/js/status.js"></script>
        <% if(content == 'dashboard' || content == ''){ %>
		<!-- Sample Charts -->
		<script type="text/javascript" src="/js/charts.js"></script>
        <% } %>
        <% if(content == 'reporte_docente_incidencia' ||
                content == 'reporte_calificaciones'){ %>
        <!-- Date Picker Customised -->
        <link rel="stylesheet" type="text/css" href="/css/datepicker.min.css" />
        <script type="text/javascript" src="/js/datepicker.min.js"></script>
        <script type="text/javascript" src="/js/i18n/datepicker.es.js"></script>
        <script>
            $('.date-selector').val(new Date().toLocaleDateString('es-MX'));
        </script>
        <% } %>
		<!-- Sample Notifications -->
		<script type="text/javascript" src="/js/notification.js"></script>

        <% if (mensaje != null && mensaje != ''){ %>
            <% mensaje.forEach(function(message){ %>
                <script type="text/javascript">
                    viewNotification('<%= message %>');
                </script>
            <% })%> 
        <% } %> 

        <% if (alert != null && alert != 'null'){ %>
            <% alert.forEach(function(message){ %>
                <script type="text/javascript">
                    viewAlert('<%= message %>');
                </script>
            <% })%> 
        <% } %> 

        <% if (modal != null && modal != ''){ %>
            <script type="text/javascript">
                var modal = UIkit.modal("#" + '<%= modal %>');
                if ( modal.isToggled() )
                    modal.hide();
                else 
                    modal.show();
            </script>
        <% } %> 
    </body>
    <footer>
        <div class="content-padder content-background">
        <div class="uk-section-small uk-section-default header">
                <div class="uk-container uk-container-small">
                    <center>
                    <h4><span class="ion-speedometer"></span> Doopy Media Inc</h4>
                    </center>
                    <p>
                        La información presentada aqui es propia del usuario, así que el mal uso de esta es responsabilidad del mismo.
                    </p>
                </div>
        </div>
        </div>
    </footer>
